&НаКлиенте
Процедура Рассчитать(Команда) 
	
	МассивНезаполненныхКормов = Новый Массив;
	ПроверитьЗаполнениеКормов(МассивНезаполненныхКормов);
	Если МассивНезаполненныхКормов.Количество() > 0 Тогда 
		Сообщение = Новый СообщениеПользователю;
		Сообщение.Текст = СтрШаблон("В номенклатуре %1 не заполнен вид корма. Расчет невозможен.", СтрСоединить(МассивНезаполненныхКормов)) ;
		Сообщение.Сообщить();	
		Возврат;
	КонецЕсли;
	
	ТекстОшибки = ""; 
	РассчитатьПоказателиПитательности(ТекстОшибки); 
	Если ТекстОшибки <> "" Тогда
		Сообщение = Новый СообщениеПользователю;
		Сообщение.Текст = ТекстОшибки;
		Сообщение.Сообщить();	
	КонецЕсли;
	
	ОбновитьПодвал();
	УстановитьОтборТаблицыПоказателей();
	
КонецПроцедуры

&НаКлиенте
Процедура РассчитатьАвтоматически(Команда)
	
	// Проверка корректности заполнения диапазонов веса (выполняется на клиенте для быстрой обратной связи)
	ТекстОшибки = "";
	Если НЕ ПроверитьДиапазоныВеса(ТекстОшибки) Тогда
		Сообщение = Новый СообщениеПользователю;
		Сообщение.Текст = ТекстОшибки;
		Сообщение.Сообщить();	
		Возврат;
	КонецЕсли;
	
	// Выполнение оптимизации на сервере (вся логика, включая применение результата)
	РезультатОптимизации = ВыполнитьАвтоматическуюОптимизациюНаСервере();
	
	Если РезультатОптимизации.Успех Тогда
		
		// Обновление интерфейса после применения результата на сервере
		ОбновитьПодвал();
		УстановитьОтборТаблицыПоказателей();
		
		// Информационное сообщение о результате
		ТекстСообщения = СтрШаблон("Расчет выполнен. Показателей вне нормы: %1 из %2. Время расчета: %3 сек.", 
			РезультатОптимизации.КоличествоПоказателейВнеНормы,
			РезультатОптимизации.ОбщееКоличествоПоказателей,
			Окр(РезультатОптимизации.ВремяРасчета, 1));
		Сообщение = Новый СообщениеПользователю;
		Сообщение.Текст = ТекстСообщения;
		Сообщение.Сообщить();
		
	Иначе
		// Ошибка при расчете
		Сообщение = Новый СообщениеПользователю;
		Сообщение.Текст = РезультатОптимизации.ТекстОшибки;
		Сообщение.Сообщить();	
	КонецЕсли;
	
КонецПроцедуры

