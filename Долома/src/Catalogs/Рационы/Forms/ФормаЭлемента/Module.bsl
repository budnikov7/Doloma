				ИЛИ (Строчка.ЕдиницаИзмерения <> ПредопределенноеЗначение("Справочник.ЕдиницыИзмерения.Процент"));
		КонецЕсли;
			
		Строчка.СодержаниеМин = Строчка.Содержание * 1.02;
		Строчка.СодержаниеМакс = Строчка.Содержание * 0.98;
