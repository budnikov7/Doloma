&НаСервере
Функция РазностьДат(ДатаНачала, ДатаОкончания, ПериодРазностей = "ДЕНЬ", ВернутьМодульЧисла = Ложь) Экспорт
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	РАЗНОСТЬДАТ(&ДатаОкончания, &ДатаНачала, " + ПериодРазностей + ") КАК Количество";
	
	Запрос.УстановитьПараметр("ДатаНачала", 	ДатаНачала);
	Запрос.УстановитьПараметр("ДатаОкончания", 	ДатаОкончания);
	
	Ответ = Запрос.Выполнить();
	
	Если Не Ответ.Пустой() Тогда
		
		Результат = Ответ.Выгрузить().Получить(0).Количество;
		Возврат ?(ВернутьМодульЧисла, Макс(Результат, Результат * (-1)), Результат);
	КонецЕсли;
	
	Возврат 0;
	
КонецФункции

