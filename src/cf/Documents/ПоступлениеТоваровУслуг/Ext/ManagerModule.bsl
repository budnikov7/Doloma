Функция ПолучитьПоляЗаполнения() Экспорт
	
	МассивПолейЗаполнения = Новый Массив;
	
	//НОМЕНКЛАТУРА
	СтруктураДанных = Новый Структура;
	СтруктураДанных.Вставить("Имя", 					"НоменклатураУслуга");
	СтруктураДанных.Вставить("НазваниеТабличнойЧасти", 	"ОбщаяТаблица");
