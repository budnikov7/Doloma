	СтруктураДанных.Вставить("ИмяКолонки", 				"Количество");
	СтруктураДанных.Вставить("Тип", 					Тип("Число"));
	СтруктураДанных.Вставить("ОбязательноеПоле", 		Истина);
	МассивПолейЗаполнения.Добавить(СтруктураДанных);
	
	//ЦЕНА
	СтруктураДанных = Новый Структура;
	СтруктураДанных.Вставить("Имя", 					"Цена");
	СтруктураДанных.Вставить("НазваниеТабличнойЧасти", 	"ОбщаяТаблица");
	СтруктураДанных.Вставить("ИмяКолонки", 				"Цена");
	СтруктураДанных.Вставить("Тип", 					Тип("Число"));
	СтруктураДанных.Вставить("ОбязательноеПоле", 		Истина);
	МассивПолейЗаполнения.Добавить(СтруктураДанных);
	
	Возврат МассивПолейЗаполнения;
	
